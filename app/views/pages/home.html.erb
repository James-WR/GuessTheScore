<div style="background-image: url(<%=asset_url "carousel_background_1.jpg"%>); height: 100vh; width: 100vw; background-position: center; background-size: cover;">
  <h1 id="header-text-main">Guess The Score</h1>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-lg-6 text-center" style="margin-top: 200px">
          <button type="button" class="btn btn-success btn-lg rounded-pill shadow-lg p-4 mr-4" data-toggle="modal" data-target="#exampleModal">Create Your League</button>
          <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <h2>Create A Community</h2>
                <%= simple_form_for(@community) do |f| %>
                  <%= f.input :community_name %>
                  <%= f.association :league, label_method: :league_name %>
                  <div class="submit">
                    <%= f.submit "Submit", class: "btn btn-success" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
          <button type="button" class="btn btn-primary btn-lg rounded-pill shadow-lg p-4 ml-4">Join A League</button>
        </div>
      </div class="row">
    </div class="container">
</div>
