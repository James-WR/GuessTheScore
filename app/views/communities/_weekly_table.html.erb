<div class="container" id="show-form">
  <h3 id="show-h3">Weekly Results</h3>
  <br>
  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Rank</th>
        <th scope="col">Name</th>
        <th scope="col">Exact</th>
        <th scope="col">Fuzzy</th>
        <th scope="col">Points</th>
      </tr>
    </thead>
    <tbody>
    <% @sorted_weekly.each_with_index do |member, index| %>
        <tr scope="row"><td><%= index + 1%></td>
        <td><%= member.user.first_name %></td>
        <td><%= member.weekly_exact %></td>
        <td><%= member.weekly_fuzzy %></td>
        <td><%= member.weekly_points %></td></tr>
      <% end %>
    </tbody>
  </table>
</div>
